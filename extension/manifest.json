{
  "name": "Syncthing Status Indicator",
  "version": "1.0.0",
  "manifest_version": 2,

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "storage",
    "alarms",
    "http://*/",
    "https://*/"
  ],

  "icons": {
    "128": "logo-128.png"
  },

  "browser_action": {
    "default_icon": "indicator-offline.png"
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
